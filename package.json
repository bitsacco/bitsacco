{
  "name": "bitsacco",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "docker compose -p bitsacco up",
    "stop": "docker compose -p bitsacco down",
    "dc": "docker compose -p bitsacco",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev",
    "dev:home": "turbo dev --filter=@bitsacco/home...",
    "dev:web": "turbo dev --filter=@bitsacco/web...",
    "dev:mobile": "turbo dev --filter=@bitsacco/mobile...",
    "dev:mobile:ios": "turbo dev --filter=@bitsacco/mobile -- --ios",
    "dev:mobile:android": "turbo dev --filter=@bitsacco/mobile -- --android",
    "dev:mobile:web": "turbo dev --filter=@bitsacco/mobile -- --web",
    "dev:fullstack": "concurrently \"npm run dev:web\" \"npm run dev:mobile\" --names \"web,mobile\" --prefix-colors \"blue,green\"",
    "build": "turbo run build",
    "build:ui": "turbo run build --filter=@bitsacco/ui...",
    "build:core": "turbo run build --filter=@bitsacco/core...",
    "build:home": "turbo run build --filter=@bitsacco/home...",
    "build:web": "turbo run build --filter=@bitsacco/web...",
    "build:mobile": "turbo run build --filter=@bitsacco/mobile...",
    "clean": "turbo run clean",
    "clean:docker": "docker compose -p bitsacco down --volumes --remove-orphans && docker system prune -f",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "logs": "docker compose -p bitsacco logs -f"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.9.0",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.3.2",
    "turbo": "^2.3.0",
    "url-loader": "^4.1.1"
  },
  "packageManager": "npm@10.9.3",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=7.0.0"
  }
}
